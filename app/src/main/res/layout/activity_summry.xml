<ScrollView
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="app.motaroart.com.motarpart.Summry">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"

            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Summary"
            android:background="#1B62A2"
            />

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Number of Items"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:paddingLeft="10dp"

                android:textColor="#000"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/item_cnt"
                android:text="XX"
                android:gravity="right"
                android:layout_width="0dp"
                android:textSize="15sp"
                android:textColor="#B30010"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Total Amount"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:paddingLeft="10dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/item_total"
                android:text="XX"
                android:gravity="right"
                android:layout_width="0dp"
                android:textSize="15sp"
                android:textColor="#B30010"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/vat_per"
                android:text="VAT (0%)"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:paddingLeft="10dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/vat_price"
                android:text="XX"
                android:gravity="right"
                android:layout_width="0dp"
                android:textSize="15sp"
                android:textColor="#B30010"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2e000000"/>
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Grand Total"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:paddingLeft="10dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:text="XXXXX"
                android:gravity="right"
                android:id="@+id/grand_total"
                android:layout_width="0dp"
                android:textSize="15sp"
                android:textColor="#B30010"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Address"
            android:background="#1B62A2"
            />

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/address1"
            android:background="@drawable/edit_text_back"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="2"
            android:gravity="left|top"
            android:hint="Address1"
            android:padding="5dp"

            />
        <EditText
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_back"
            android:id="@+id/address2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="2"
            android:gravity="left|top"
            android:hint="Address2"
            android:padding="5dp"

            />
        <EditText
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_back"
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="2"
            android:gravity="left|top"
            android:hint="State"
            android:padding="5dp"

            />
        <EditText
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_back"
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="2"
            android:gravity="left|top"
            android:hint="City"
            android:padding="5dp"

            />
        <EditText
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_back"
            android:id="@+id/pobox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="2"
            android:gravity="left|top"
            android:hint="PO Box"
            android:padding="5dp"

            />
        <Button
            android:textColor="#fff"
            android:layout_margin="2dp"
            android:onClick="paymentOrder"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="@drawable/btn_back"
            android:layout_height="match_parent"
            android:text="Pay Now"/>

    </LinearLayout>
</ScrollView>