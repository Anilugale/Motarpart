<ScrollView
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="app.motaroart.com.motarpart.Summry">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:drawableLeft="@drawable/check_list"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Summry"
            android:background="#1B62A2"
            />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi XXXX"
            android:textSize="13sp"
            android:padding="5dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="No of Items"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:paddingLeft="10dp"
                android:textColor="#E18500"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/item_cnt"
                android:text="XX"
                android:layout_width="0dp"
                android:textSize="20sp"
                android:textColor="#B30010"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Total"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:paddingLeft="10dp"
                android:textColor="#E18500"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:text="XXXXX"
                android:id="@+id/item_total"
                android:layout_width="0dp"
                android:textSize="20sp"
                android:textColor="#B30010"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>



        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:drawableLeft="@drawable/check_list"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Address"
            android:background="#1B62A2"
            />

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/address1"
            android:background="@drawable/edit_text_back"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="2"
            android:gravity="left|top"
            android:hint="Address1"
            android:padding="5dp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_back"
            android:id="@+id/address2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="2"
            android:gravity="left|top"
            android:hint="Address2"
            android:padding="5dp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_back"
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="2"
            android:gravity="left|top"
            android:hint="State"
            android:padding="5dp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_back"
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="2"
            android:gravity="left|top"
            android:hint="City"
            android:padding="5dp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_back"
            android:id="@+id/pobox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="2"
            android:gravity="left|top"
            android:hint="PO Box"
            android:padding="5dp"
            android:textStyle="bold"
            />
        <Button
            android:textColor="#fff"
            android:layout_margin="2dp"
            android:onClick="paymentOrder"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="@drawable/btn_back"
            android:layout_height="match_parent"
            android:text="Pay Now"/>

    </LinearLayout>
</ScrollView>