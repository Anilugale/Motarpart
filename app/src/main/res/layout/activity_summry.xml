<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.motaroart.com.motarpart.Summry">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:drawableLeft="@drawable/check_list"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Summry"
        android:background="#1B62A2"
        />
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi XXXX"
        android:textSize="13sp"
        android:padding="5dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="No of Items"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:paddingLeft="10dp"
            android:textColor="#E18500"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_cnt"
            android:text="XX"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:textColor="#B30010"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Total"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:paddingLeft="10dp"
            android:textColor="#E18500"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:text="XXXXX"
            android:id="@+id/item_total"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:textColor="#B30010"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>



    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:drawableLeft="@drawable/check_list"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Address"
        android:background="#1B62A2"
        />


    <TextView
        android:id="@+id/po_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi XXXX"
        android:textSize="13sp"
        android:padding="5dp"
        android:textStyle="bold"
        />
</LinearLayout>
