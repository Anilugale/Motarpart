<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="#83000000"
    android:layout_margin="10dp"
    android:padding="1dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:padding="7dp"
            android:textColor="#000"
            android:id="@+id/p_name"
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="0"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:paddingLeft="10dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/part_images"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="#83000000"
            android:layout_gravity="center"
            android:padding="1dp"
            android:src="@drawable/t2"
            android:layout_marginRight="10dp"
            />



        <LinearLayout
            android:padding="2dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <TextView
                android:paddingRight="10dp"
                android:id="@+id/p_number"
                android:gravity="left"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="14sp"
                android:text="Product Number"/>

            <LinearLayout
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingRight="10dp"

                    android:id="@+id/p_rate"
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textColor="#000"
                    android:layout_height="wrap_content"

                    android:textSize="14sp"
                    android:text="KES.1000.02"/>
                <TextView
                    android:paddingRight="10dp"


                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:textColor="#000"
                    android:layout_height="wrap_content"

                    android:textSize="14sp"
                    android:text="X"/>
                <TextView
                    android:paddingRight="10dp"
                    android:textColor="#000"
                    android:id="@+id/p_qty"
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"

                    android:textSize="14sp"
                    android:text="10 qty"/>
            </LinearLayout>


            <TextView
                android:paddingRight="10dp"

                android:id="@+id/p_total"
                android:gravity="right"
                android:layout_width="match_parent"
                android:textColor="#0A5692"

                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="KES.22121"/>
        </LinearLayout>
        </LinearLayout>






</LinearLayout>