<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.motaroart.com.motarpart.Payment">


    <TextView
        android:id="@+id/total"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ff8d0e0c"
        android:gravity="right"
        android:layout_margin="3dp"
        android:text="20020.0"/>

    <RadioGroup
        android:orientation="vertical"
        android:id="@+id/pay_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_marginLeft="10dp"
            android:id="@+id/m_paisa"
            android:layout_width="wrap_content"
            android:text="   "
            android:drawableRight= "@drawable/mpaesa"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_marginLeft="10dp"
            android:id="@+id/debit_card"
            android:layout_width="wrap_content"
            android:text="   "
            android:drawableRight= "@drawable/credit_cards"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <EditText
        android:id="@+id/mpaisa_edit"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/edit_text_back"
        android:editable="false"
        android:hint="M-Paisa Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
