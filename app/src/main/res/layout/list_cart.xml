<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="0.1dp"
    android:background="#83000000"
    android:layout_height="wrap_content">


    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="#000"
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="left"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Assembly Connecting Rod" />

        <ImageButton
            android:layout_margin="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textOff=""
            android:textOn=""
            android:src="@drawable/remove"
            android:id="@+id/remove_btn" />

    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0.1dp"
        android:background="#2e000000" />
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#fff"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <ImageView

                android:padding="1dp"
                android:background="#2e000000"
                android:id="@+id/part_images"
                android:layout_height="60dp"
                android:layout_width="100dp"
                android:src="@drawable/t2"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:id="@+id/product_code1"
                android:layout_width="100dp"
                android:paddingBottom="3dp"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="RE 02210102" />
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:textColor="#000"
                android:id="@+id/product_code"
                android:layout_width="100dp"
                android:paddingBottom="3dp"
                android:textSize="13sp"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="RE 02210102" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:id="@+id/product_mrp"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="KAS. 14200" />
                <TextView
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="50dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="X" />

                <EditText
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/product_qty"
                    android:inputType="number"
                    android:maxLength="3"
                    android:lines="1"

                    android:layout_height="wrap_content"
                    android:hint="Qty" />





            </LinearLayout>


            <TextView
                android:id="@+id/product_qty_total"
                android:padding="10dp"
                android:layout_gravity="right"
                android:textSize="15sp"
                android:textColor="#0A5692"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KAS. 42000.01" />

        </LinearLayout>

    </LinearLayout>





</LinearLayout>