<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.motaroart.com.motarpart.OrderDetailed">
    <ListView
        android:id="@+id/order_details_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cart_cnt"/>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Order Details"
        android:drawableLeft="@drawable/check_list"
        android:background="#1B62A2"/>


    <LinearLayout
        android:orientation="vertical"
        android:background="#D6E4EF"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:textColor="#0D5A98"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paid_by"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="Transation Ref Number : 11212154458 "/>

        <TextView
            android:textColor="#0D5A98"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipment Details"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="Anil Ugale"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <Button
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_back"
                android:text="Continue"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>





</RelativeLayout>
