<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.motaroart.com.motarpart.OrderDetail">
    <TextView
        android:id="@+id/cart_cnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="ORDER DETAIL"

        android:background="#1B62A2"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="ORDER NUMBER"
            android:background="#D7E5F0"/>
        <TextView
            android:id="@+id/order_number"
            android:layout_width="0dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="X"
            android:background="#D7E5F0"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:padding="5dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="NO OF ITEM"
            android:background="#D7E5F0"/>
        <TextView
            android:id="@+id/no_of_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:padding="5dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="X"
            android:background="#D7E5F0"/>
    </LinearLayout>


    <ListView

        android:id="@+id/order_history"
        android:dividerHeight="5dp"
        android:divider="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="15"/>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:padding="5dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="SUB TOTAL"
            android:background="#D7E5F0"/>
        <TextView
            android:id="@+id/subtotal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:padding="5dp"
            android:gravity="right"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="X"
            android:background="#D7E5F0"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/vat_per1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:padding="5dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="SUB TOTAL"
            android:background="#D7E5F0"/>
        <TextView
            android:id="@+id/vat_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:padding="5dp"
            android:gravity="right"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="X"
            android:background="#D7E5F0"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:padding="5dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="TOTAL"
            android:background="#D7E5F0"/>
        r<TextView
            android:id="@+id/grand_total"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:padding="5dp"
            android:gravity="right"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="X"
            android:background="#D7E5F0"/>
    </LinearLayout>
</LinearLayout>
