
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:background="#fff"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="right" />

    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="100dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_height="100dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#979799"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:gravity="center"
                android:text="CN200012"
                android:id="@+id/product_code" />
            <ImageView
                android:id="@+id/part_images"
                android:layout_height="60dp"
                android:layout_width="100dp"
                android:background="#000000"
                android:layout_gravity="center"
                android:padding="1dp"
                android:src="@drawable/t2"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:textColor="#0A5692"
                        android:gravity="left"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Assembly Connecting Rod" />

                    <ToggleButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:textOff=""
                        android:textOn=""
                        android:background="@drawable/toggle_selector"
                        android:id="@+id/wish_btn" />

                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_margin="3dp"
                android:layout_height="0.3dp"
                android:background="#000"/>
            <TextView
                android:layout_gravity="right"
                android:id="@+id/product_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make: BMW"
                android:textColor="#979799"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/product_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model: Mahindra and Mahindra"
                android:textColor="#979799"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/product_oem_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OEM No:0022656"
                android:textColor="#979799"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/product_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number: LX00210"
                android:textColor="#979799"
                android:textSize="15sp"/>

        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_mrp"
                android:layout_width="100dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="KN.120"
                android:textStyle="bold"
                android:textColor="#CF0000"
                android:textSize="20sp"/>
        </LinearLayout>

        <Button
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/details_btn_back"
            android:layout_margin="2dp"
            android:id="@+id/deatail" />
        <Button
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_width="120dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/add_cart_btn_back"
            android:layout_height="40dp"
            android:id="@+id/add_2cart" />

    </LinearLayout>




</LinearLayout>