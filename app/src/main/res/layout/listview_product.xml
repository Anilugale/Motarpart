
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="1sp"
    android:background="#87000000"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:padding="10dp"
            android:textColor="#000"
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Assembly Connecting Rod" />

        <ToggleButton
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/toggle_selector"
            android:id="@+id/wish_btn" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="right" />

    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:background="#fff"
            android:layout_width="100dp"
            android:paddingTop="10dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_height="70dp">


            <ImageView
                android:id="@+id/part_images"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#87000000"
                android:layout_gravity="center"
                android:padding="1dp"
                android:src="@drawable/t2"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:textColor="#000"
                android:layout_gravity="right"
                android:id="@+id/product_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make: BMW"

                android:textSize="15sp"/>
            <TextView
                android:id="@+id/product_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model: Mahindra and Mahindra"
                android:textColor="#000"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/product_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OEM No:0022656"
                android:textColor="#000"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/product_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number: LX00210"
                android:textColor="#000"
                android:textSize="15sp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


        <TextView
            android:id="@+id/product_mrp"
            android:layout_width="100dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="KN.120"
            android:textStyle="bold"
            android:textColor="#0A5692"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textColor="#ffffff"
                android:gravity="left"
                android:background="@drawable/add_cart_btn_back"
                android:id="@+id/add_2cart" />
        </LinearLayout>
        <TextView
            android:id="@+id/is_available"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="#ff0e921f"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Stock" />

    </LinearLayout>




</LinearLayout>