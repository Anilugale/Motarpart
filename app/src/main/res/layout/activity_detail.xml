
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout

        android:background="#fff"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="#0A5692"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"

            android:text="Assembly Connecting Rod"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:id="@+id/part_images"
                android:layout_height="156dp"
                android:layout_width="260dp"
                android:src="@drawable/t2"
                android:background="#1a000000"
                android:padding="1dp"   />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <RelativeLayout
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"

                    android:layout_gravity="right"
                    android:id="@+id/product_make"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMW"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="15sp"/>
                <ToggleButton
                    android:layout_alignParentRight="true"
                     android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/toggle_selector"
                    android:id="@+id/wish_btn" />
            </RelativeLayout>
            <LinearLayout
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView

                    android:id="@+id/product_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mahindra and Mahindra"
                    android:textColor="#000"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/product_mrp"
                    android:layout_width="0dp"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="MRP:120"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textColor="#000080"
                    android:textSize="13sp"/>
            </LinearLayout>



        </LinearLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            >

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingRight="10dp"
                android:gravity="left"
                android:textColor="#000"
                android:textSize="13sp"
                android:text="CN200012"
                android:id="@+id/product_code" />
            <TextView
                android:layout_below="@+id/product_code"
                android:id="@+id/product_number"
                android:layout_width="match_parent"
                android:gravity="left"

                android:layout_height="wrap_content"
                android:text="LX00210"
                android:textColor="#000"
                android:textSize="13sp"/>
            <Button
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:background="@drawable/add_cart_btn_back"
                android:id="@+id/add_2cart"
             />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_below="@+id/product_number"
                android:id="@+id/is_available"
                android:padding="5dp"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:textColor="#ff0e921f"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In Stock" />

        </RelativeLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffa0a1a2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Description"
            />
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffa0a1a2"/>
        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="As a connecting rod is rigid, it may transmit either a push or a pull and so the rod may rotate the crank through both halves of a revolution, i.e. piston pushing and piston pulling. Earlier mechanisms, such as chains, could only pull. In a few two-stroke engines, the connecting rod is only required to push."
            android:id="@+id/product_desc" />


    </LinearLayout>
</ScrollView>