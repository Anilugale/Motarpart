<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.motaroart.com.motarpart" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cart"
        android:label="Demo"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MakeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Secound"
            android:label="@string/title_activity_secound" />
        <activity
            android:name=".Login"
            android:screenOrientation="portrait" />
        <activity android:name=".Registration" />
        <activity android:name=".ForgetPassword" />
        <activity android:name=".Order" />

        <activity
            android:name=".Detail"
            />
        <activity
            android:name=".Cart"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".OrderDetailed"   />

        <activity
            android:name=".ModelActivity" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".MakeActivity" /> </activity>
        <activity
            android:name=".CategoryActivity"   >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".ModelActivity" /> </activity>
        <activity
            android:name=".ProductActivity"   >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
        android:value=".CategoryActivity" />
        </activity>
        <activity
            android:name=".WishActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MakeActivity" />
        </activity>
    </application>

</manifest>
