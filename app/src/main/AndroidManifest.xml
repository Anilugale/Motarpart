<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.motaroart.com.motarpart" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cart"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MakeActivity"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Registration"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ForgetPassword"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Order"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Detail"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Cart"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".OrderDetailed"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ModelActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MakeActivity" />
        </activity>
        <activity
            android:name=".CategoryActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ModelActivity" />
        </activity>
        <activity
            android:name=".ProductActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CategoryActivity" />
        </activity>
        <activity
            android:name=".WishActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MakeActivity" />
        </activity>
        <activity
            android:name=".services.ImageViewer"
            android:label="@string/title_activity_image_viewer" >
        </activity>

        <activity
            android:name=".UserActivity"
            android:label="@string/title_activity_user_acitivity" >
        </activity>
    </application>

</manifest>
